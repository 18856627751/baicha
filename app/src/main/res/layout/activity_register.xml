<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.RegisterActivity">


    <TextView
        android:id="@+id/un_user_tv_title"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/register_title_border"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@color/grey_red"
        android:text="@string/register"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/un_user_rl_center"
        android:layout_below="@id/un_user_tv_title"
        android:background="@color/white"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ben.jdemo.savor.widget.RegisterProgress
            android:id="@+id/rp_progress_tea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/fra_register"
            android:layout_margin="70dp"
            android:translationZ="20dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bt_next_step"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/rp_progress_tea"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/next_step"
            android:background="@drawable/seletor_register"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/un_user_rl_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
        <ImageView
            android:background="@mipmap/register_bg_heard"
            android:rotation="180"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>